<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Materi.PengertianSyair">
    <androidx.cardview.widget.CardView
        android:id="@+id/card9"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#6F7BF0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contoh"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="1"
                android:shadowColor="#707070"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"></TextView>
            <TextView
                android:id="@+id/text18"
                android:layout_below="@id/text17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Syair?"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="1"
                android:shadowColor="#707070"
                android:layout_marginLeft="20dp"></TextView>

            <ImageView
                android:id="@+id/g1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_toEndOf="@+id/text17"
                android:layout_toRightOf="@+id/text17"
                android:layout_centerVertical="true"
                android:background="@drawable/muslimahbaru"></ImageView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/card9"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>
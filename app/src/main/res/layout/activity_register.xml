<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Register">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:textStyle="bold"
            android:textSize="32dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"></TextView>
        <TextView
            android:id="@+id/text8"
            android:layout_below="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan Email"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"></TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/text8"
            app:cardCornerRadius="10dp">
            <EditText
                android:id="@+id/emailregister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text4"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                ></EditText>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/text9"
            android:layout_below="@+id/card3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pengguna"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"></TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/text9"
            app:cardCornerRadius="10dp">
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text4"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                ></EditText>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/text10"
            android:layout_below="@+id/card4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asal Sekolah"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"></TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/text10"
            app:cardCornerRadius="10dp">
            <EditText
                android:id="@+id/asalsekolah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                ></EditText>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/text11"
            android:layout_below="@+id/card5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kata Sandi"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"></TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/text11"
            app:cardCornerRadius="10dp">
            <EditText
                android:id="@+id/katasandiregister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:inputType="textPassword"
                android:layout_marginRight="10dp"
                android:background="@null"
                ></EditText>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/buttondaftar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_below="@id/card6"
            android:text="Daftar"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:background="@drawable/kotak2"
            android:layout_marginBottom="40dp"></Button>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox"
            android:layout_gravity="center"
            android:text="Powered By"></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text6"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/uadlogo"></ImageView>

    </LinearLayout>
</RelativeLayout>